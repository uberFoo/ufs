{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'ufs'",
            "cargo": {
                "args": ["test", "--no-run", "--lib", "--package=ufs"],
                "filter": {
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug FUSE Remote Block Server",
            "program": "${workspaceFolder}/target/debug/fuse-ufs",
            "args": ["--url", "http://localhost:8888/demo", "mnt"],
            "env": [
                {
                    "name": "RUST_LOG",
                    "value": "debug,ufs::runtime=info"
                }
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug FUSE",
            "program": "${workspaceFolder}/target/debug/fuse-ufs",
            "args": ["--bundle", "bundles/demo", "mnt"],
            "env": [
                {
                    "name": "RUST_LOG",
                    "value": "debug,ufs::runtime=info"
                }
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug FUSE Server",
            "program": "${workspaceFolder}/target/debug/fuse-ufs",
            "args": [
                "--port",
                "8888"
                "--bundle",
                "bundles/demo",
                "mnt"
            ],
            "env": [
                {
                    "name": "RUST_LOG",
                    "value": "debug,ufs::runtime=info"
                }
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
